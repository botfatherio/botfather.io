---
import { Code } from 'astro:components';

interface Props {
  filename: string;
  code: string;
}

const { filename, code } = Astro.props;
---

<div class="card border-0">
  <div class="card-body">
    <p class="text-center text-monospace text-muted mb-1">
      <small>{filename}</small>
    </p>
    <Code code={code} lang="js" theme="github-light" class="mb-0 p-2" />
  </div>
</div>
