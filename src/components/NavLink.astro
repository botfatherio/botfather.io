---
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
const active = pathname === href;
---

<a
  class={`nav-link ${active ? "active" : ""}`}
  aria-current={active ? "page" : undefined}
  href={href}>{label}</a
>
