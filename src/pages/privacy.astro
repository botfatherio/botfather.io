---
import { getEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import BreadcrumbItem from "../components/BreadcrumbItem.astro";
import LegalText from "../components/LegalText.astro";

const privacy = await getEntry("legal", "privacy");
const { Content } = await privacy.render();
---

<Layout title={privacy.data.title}>
  <Breadcrumb>
    <BreadcrumbItem label={privacy.data.title} />
  </Breadcrumb>

  <LegalText title={privacy.data.title}>
    <Content />
  </LegalText>
</Layout>
